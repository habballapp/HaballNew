<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#96bb3c</item>
        <item name="android:textColor">#676a6c</item>
        <!--        <item name="android:textSize">20sp</item>-->
        <item name="colorAccent">#A9A9A9</item>
        <item name="colorControlNormal">#A9A9A9</item>
        <item name="colorControlActivated">#96bb3c</item>
        <item name="boxStrokeWidth">1.75dp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
    </style>

    <style name="TextLabelSearchBox" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#96bb3c</item>
        <item name="android:textColor">#676a6c</item>
        <!--        <item name="android:textSize">20sp</item>-->
        <item name="colorAccent">#A9A9A9</item>
        <item name="colorControlNormal">#A9A9A9</item>
        <item name="colorControlActivated">#96bb3c</item>
        <item name="boxStrokeColor">#96bb3c</item>
        <item name="colorPrimary">#96bb3c</item>
        <item name="boxStrokeWidth">2.5dp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
    </style>

    <style name="ErrorTextAppearance" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">#ffff0000</item>
        <item name="android:textColorHint">#ffff0000</item>
        <item name="android:textSize">18sp</item>
        <item name="colorAccent">#ffff0000</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#96BA3C</item>

        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:textColorPrimaryInverse">#000
        </item> <!-- header date, month color && calendar text highlight color -->
        <item name="android:textColorSecondaryInverse">#000</item> <!-- header year color -->

    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker" tools:targetApi="lollipop">
        <item name="android:headerBackground">#fff</item> <!-- header background color -->
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#96bb3c</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance44">
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
