<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Notfication.Notification">


    <LinearLayout
        android:id="@+id/notification_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/underline"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Notifications Detail"
            android:paddingBottom="10dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="#96bb3c"
            android:background="@drawable/half_underline"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_payment_request"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/line_bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            />

            />
    </LinearLayout>


</RelativeLayout>