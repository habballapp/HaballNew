<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/proof_of_payment_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/underline"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Proof of Payment"
                android:paddingBottom="10dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="#96bb3c"
                android:background="@drawable/half_underline"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/proof_of_payment_view_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/proof_of_payment_view"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:orientation="vertical"
            android:weightSum="10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:text="POP ID"
                android:layout_marginTop="10dp"
                android:textColor="#96bb3c"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_pop_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:background="@drawable/distribution_login"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:text="Distributor Name"
                android:layout_marginTop="15dp"
                android:textColor="#96bb3c"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_distributor_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/distribution_login"
                android:textSize="15sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:text="Created Date"
                android:layout_marginTop="15dp"
                android:textColor="#96bb3c"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_created_date"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/distribution_login"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:text="Mode of Payment"
                android:layout_marginTop="15dp"
                android:textColor="#96bb3c"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_payment_mode"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:drawablePadding="10dp"
                android:background="@drawable/distribution_login"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:text="Bank"
                android:layout_marginTop="15dp"
                android:textColor="#96bb3c"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_bank"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:drawablePadding="10dp"
                android:background="@drawable/distribution_login"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:text="Branch Code"
                android:layout_marginTop="15dp"
                android:textColor="#96bb3c"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_branch_code"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:drawablePadding="10dp"
                android:background="@drawable/distribution_login"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:text="Transaction No"
                android:layout_marginTop="15dp"
                android:textColor="#96bb3c"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_transaction_no"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:drawablePadding="10dp"
                android:background="@drawable/distribution_login"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:text="Payment ID"
                android:layout_marginTop="15dp"
                android:textColor="#96bb3c"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_payment_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:drawablePadding="10dp"
                android:background="@drawable/distribution_login"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:text="Status"
                android:layout_marginTop="15dp"
                android:textColor="#96bb3c"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_proof_of_payment_view_status"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:drawablePadding="10dp"
                android:background="@drawable/distribution_login"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/proof_of_payment_view_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/proof_of_payment_view_fields">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/border_set"
                android:padding="10dp"
                android:text="Proof of Payment Details"
                android:textColor="#96bb3c"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_proof_of_payments_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/proof_of_payment_view_header"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rv_proof_of_payments_view"
            android:layout_marginBottom="10dp"
            android:text="© Haball | All rights reserved"
            android:gravity="center"/>
    </RelativeLayout>

</ScrollView>