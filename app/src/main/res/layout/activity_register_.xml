<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".Select_User.Register_Activity"
    android:background="@drawable/background_logo"
>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6">

    <LinearLayout
        android:id="@+id/text_ln"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:layout_weight="1"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:maxLines="1"
            android:padding="2dp"
            android:text="Welcome To Haball"
            android:textColor="#96bb3c"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/open_sans_semibold"
            android:justificationMode="inter_word"
            android:text="@string/Txt_Description_haball"
            android:textColor="@color/text_color_selection"
            android:textSize="13sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_ln"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_set"
        >

        <TextView
            android:id="@+id/login_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:padding="10dp"
            android:text="Select Account Type"
            android:textColor="#96bb3c"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="72dp"
        android:layout_weight="4"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:layout_below="@+id/ln_login"
        >


            <RelativeLayout
                android:id="@+id/rl_retailer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:layout_weight="1">

            <ImageView
                android:id="@+id/img_retailer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/distributor_logo"
                android:layout_marginBottom="8dp"
                />

                <TextView
                    android:id="@+id/txt_retailer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_retailer"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="center"
                    android:text="Distributor"
                    android:textColor="@color/text_color_selection"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_distributor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/retailer_logo"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/txt_distributor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_below="@+id/img_distributor"
                    android:text="Retailer"
                    android:textColor="@color/text_color_selection"
                    android:textStyle="bold"
                    />

            </RelativeLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="Â© Haball | All rights reserved" />
</LinearLayout>
</RelativeLayout>