<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="5dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:background="@drawable/edit_text_squared"
    android:layout_marginTop="20dp">

    <LinearLayout
        android:id="@+id/ll_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">
        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/rv_box_heading_size"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_weight="0.5"
            android:textColor="@color/rv_box_color"
            />
        <ImageButton
            android:id="@+id/menu_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:background="@null"
            android:textSize="18sp"
            android:textColor="#676a6c"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/payment_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_heading"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:text="Payment ID:"
        android:textSize="@dimen/rv_box_text_size"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/rv_box_color"
        />
    <TextView
        android:id="@+id/payment_id_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_heading"
        android:layout_marginTop="15dp"
        android:text="51247895354254780369"
        android:textSize="@dimen/rv_box_text_size"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/payment_id"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/rv_box_color"
        />
    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payment_id"
        android:layout_marginBottom="5dp"
        android:text="Amount: "
        android:textSize="@dimen/rv_box_text_size"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/rv_box_color"
        />
    <TextView
        android:id="@+id/amount_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payment_id"
        android:text="PKR 600,000.00"
        android:textSize="@dimen/rv_box_text_size"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_amount"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/rv_box_color"
        />
    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_amount"
        android:text="Status: "
        android:textSize="@dimen/rv_box_text_size"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/rv_box_color"
        />
    <TextView
        android:id="@+id/status_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_amount"
        android:text="Paid"
        android:layout_toRightOf="@+id/status"
        android:textSize="@dimen/rv_box_text_size"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/rv_box_color"
        />

</RelativeLayout>