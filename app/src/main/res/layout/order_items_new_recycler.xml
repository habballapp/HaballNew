    <TextView
        android:id="@+id/tax_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price"
        android:layout_toRightOf="@id/UOM_value"
        android:text=""
        android:fontFamily="@font/open_sans_semibold"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_order_view_box_text_size"
         />

    <TextView
        android:id="@+id/Quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UOM"
        android:text="Quantity: "
        android:fontFamily="@font/open_sans"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_order_view_box_text_size"
         />

    <TextView
        android:id="@+id/Quantity_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UOM"
        android:layout_toRightOf="@id/Quantity"
        android:text=""
        android:fontFamily="@font/open_sans_semibold"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_order_view_box_text_size" />
    <TextView
        android:id="@+id/separator_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UOM"
        android:layout_toRightOf="@id/Quantity_value"
        android:text="   |   "
        android:fontFamily="@font/open_sans"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_order_view_box_text_size"
         />
    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UOM"
        android:layout_toRightOf="@id/separator_3"
        android:text="Amount: "
        android:fontFamily="@font/open_sans"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_order_view_box_text_size"
         />
    <TextView
        android:id="@+id/amount_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UOM"
        android:layout_toRightOf="@id/amount"
        android:text=""
        android:fontFamily="@font/open_sans_semibold"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_order_view_box_text_size"
         />
</RelativeLayout>