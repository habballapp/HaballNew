<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Distributor.ui.retailer.RetailerPlaceOrder.RetailerPlaceOrder">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs_rpoid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="27dp"
            android:background="@drawable/tab_indicator"
            app:tabContentStart="0dp"
            app:tabGravity="fill"
            app:tabIndicatorColor="#96bb3c"
            app:tabMode="scrollable"
            app:tabPaddingEnd="0dp"
            app:tabPaddingStart="0dp"
            android:paddingVertical="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingHorizontal="0dp"
            app:tabPadding="0dp"
            app:tabSelectedTextColor="#96bb3c"
            app:tabTextAppearance="@style/CustomTextAppearanceTab" />

        <com.example.haball.NonSwipeableViewPager
            android:id="@+id/view_pager_rpoid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tabs_rpoid"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>