    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_alignParentBottom="true"-->
    <!--        android:layout_marginBottom="10dp"-->
    <!--        android:text="Â© Haball | All rights reserved"-->
    <!--        android:gravity="center"-->
    <!--        />-->

</RelativeLayout>