<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Payment.Payment_Amount">

    <LinearLayout
        android:id="@+id/ln_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/underline"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp"
            android:layout_weight="1"
            android:background="@drawable/half_underline"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:text="Payment Request"
            android:textColor="#96bb3c"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/ln_login"
        android:weightSum="3"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/relative_Preffered_Contact"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/relative_criticality"
            android:background="@drawable/edit_round">

            <Spinner
                android:id="@+id/spinner_company"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dropDownWidth="match_parent"
                android:popupBackground="@drawable/spinner_round"
                android:theme="@style/Spinner" />
        </RelativeLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_txt_amount"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:hint="Amount"
            android:theme="@style/TextLabel"
            android:layout_weight="1"
            app:boxBackgroundColor="#fff"
            app:boxStrokeColor="#e5e5e5"
            app:boxStrokeWidth="1.75dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp"
                android:maxLength="9"
                android:textColor="#676a6c"
                android:inputType="number"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>
         </LinearLayout>


    <LinearLayout
        android:id="@+id/ln_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ln_txt"
        android:layout_marginTop="20sp"
        android:weightSum="2"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/btn_create"
            android:layout_width="match_parent"
            android:background="@drawable/button_round"
            android:layout_height="45dp"
            android:text="Create Payment"
            android:textSize="14sp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_weight="1"
            android:textAllCaps="false"
            />
    </LinearLayout>
