<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Payment.PaymentLedger">
    <TextView
        android:id="@+id/tv_proof_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Ledger"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="#96bb3c"
        android:layout_marginLeft="40dp"
        android:background="@drawable/half_underline"/>

    <RelativeLayout
        android:id="@+id/line_"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/tv_proof_payment"
        android:layout_toRightOf="@+id/tv_proof_payment"
        android:background="@drawable/line"
        android:layout_marginTop="-2dp"/>

    <RelativeLayout
        android:id="@+id/spinner_containerMain"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_text_squared"
        android:layout_below="@+id/line_">
        <Spinner
            android:id="@+id/spinner_criteria"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/spinner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_text_squared"
        android:layout_below="@+id/spinner_containerMain">
        <Spinner
            android:id="@+id/spinner_conso"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/spinner_container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_text_squared"
        android:layout_below="@+id/spinner_container">
        <Spinner
            android:id="@+id/conso_spinner2"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <EditText
            android:id="@+id/conso_edittext"
            android:background="@drawable/edit_text_squared"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line_bottom"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/spinner_container1"
        android:background="@drawable/line_seperator"
        android:layout_marginTop="30dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_payment_ledger"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line_bottom"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="40dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="Â© Haball | All rights reserved"
        android:gravity="center"
        />
</RelativeLayout>