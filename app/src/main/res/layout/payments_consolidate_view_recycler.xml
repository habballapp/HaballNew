<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:background="@drawable/edit_text_squared"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="5dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:id="@+id/ll_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <TextView
            android:id="@+id/consolidate_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="#676a6c"
            android:text="Ghulam Rabani &amp; Sons Traders &amp; Distributors"
            android:textStyle="bold"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/consolidate_menu_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:background="@null"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:textColor="#676a6c"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/consolidate_invoice_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_heading"
        android:layout_marginTop="30dp"
        android:text="Invoice No:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/consolidate_invoice_no_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_heading"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/consolidate_invoice_view"
        android:text="1002312324251524"
        android:textColor="#676a6c"
        android:textStyle="bold"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/tv_consolidate_amount_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/consolidate_invoice_view"
        android:text="Amount:"
        android:textSize="16sp" />



    <TextView
        android:id="@+id/tv_pkr_amount_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/consolidate_invoice_no_view"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_consolidate_amount_view"
        android:text="PKR "
        android:textColor="#676a6c"
        android:textSize="16sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/consolidate_amount_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/consolidate_invoice_no_view"
        android:layout_marginLeft="1dp"
        android:layout_toRightOf="@+id/tv_pkr_amount_view"
        android:text=" 600,000.00"
        android:textColor="#676a6c"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/consolidate_status_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_consolidate_amount_view"
        android:text="Status: "
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/consolidate_status_view_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/consolidate_amount_value"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/consolidate_status_view"
        android:text="Paid"
        android:textColor="#96bb3c"
        android:textStyle="bold"
        android:textSize="16sp" />


</RelativeLayout>