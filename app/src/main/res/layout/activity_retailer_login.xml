<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTintMode="src_over"
    tools:context=".Distribution_Login.Distribution_Login">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        >
        <ScrollView
            android:id="@+id/sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >
            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:id="@+id/text_ln"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:orientation="vertical"
                    android:weightSum="2"

                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="Welcome To Retailer Portal"
                        android:textColor="#96bb3c"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="40dp"
                        android:textColor="#676a6c"
                        android:layout_weight="1"
                        android:justificationMode="inter_word"
                        android:text="@string/Txt_Description_Retailer"
                        android:textSize="15sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_ln">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="40dp"
                        android:background="@drawable/border_set"
                        android:padding="10dp"
                        android:text="Login"
                        android:textColor="#96bb3c"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ln_login"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:hint="Username Or Mobile No"
                        android:textColorHint="#676a6c"
                        android:theme="@style/TextLabel"
                        app:boxStrokeColor="#e5e5e5"
                        app:boxStrokeWidth="0.5dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_username"
                            android:textSize="15sp"
                            android:textColor="#676a6c"
                            android:paddingTop="5dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="5dp"
                            android:inputType="textEmailAddress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:hint="Password"
                        android:layout_marginTop="30dp"
                        android:textColorHint="#676a6c"
                        android:theme="@style/TextLabel"
                        app:boxStrokeColor="#e5e5e5"
                        app:passwordToggleEnabled="true"
                        app:boxStrokeWidth="0.5dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_password"
                            android:drawableRight="@drawable/ic_remove_red_eye_black_24dp"
                            android:textSize="15sp"
                            android:textColor="#676a6c"
                            android:paddingTop="5dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="5dp"
                            android:layout_width="match_parent"
                            android:inputType="textPassword"
                            android:layout_height="match_parent"/>

                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ln_txt"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/retailer_btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_round"
                        android:stateListAnimator="@null"
                        android:gravity="center"
                        android:text="Login"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/ret_btn_password"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="40dp"
                        android:stateListAnimator="@null"
                        android:layout_weight="1"
                        android:background="@drawable/button_round"
                        android:gravity="center"
                        android:text="@string/Forgot_Password"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="15sp"

                        />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ln_registration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ln_btn"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/ret_btn_support"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:stateListAnimator="@null"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_round"
                        android:gravity="center"
                        android:text="Need Support"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/ret_btn_signup"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginRight="40dp"
                        android:stateListAnimator="@null"
                        android:layout_marginBottom="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_round"
                        android:gravity="center"
                        android:text="Sign Up"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="15sp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/footer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:text="© Haball | All rights reserved" />

            </RelativeLayout>


        </ScrollView>
    </RelativeLayout>




</RelativeLayout>