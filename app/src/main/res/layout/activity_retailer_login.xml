                <LinearLayout
                    android:id="@+id/ln_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="29dp"
                    android:layout_marginTop="34dp"
                    android:layout_marginEnd="29dp"
                    android:background="@drawable/border_set"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/login_heading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_semibold"
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="5dp"
                        android:text="Login"
                        android:textColor="#96bb3c"
                        android:textSize="25sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ln_login"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_username"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginLeft="29dp"
                        android:layout_marginRight="29dp"
                        android:hint="Username Or Mobile No"
                        android:textColorHint="#A9A9A9"
                        android:theme="@style/TextLabel"
                        app:boxBackgroundColor="#fff"
                        app:boxStrokeColor="#e5e5e5"
                        app:boxStrokeWidth="0.5dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_username"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="text"
                            android:fontFamily="@font/open_sans_semibold"
                            android:paddingLeft="20dp"
                            android:paddingTop="5dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="5dp"
                            android:textColor="#676a6c"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_password"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginLeft="29dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="29dp"
                        android:hint="Password"
                        android:textColorHint="#A9A9A9"
                        android:theme="@style/TextLabel"
                        app:boxBackgroundColor="#fff"
                        app:boxStrokeColor="#e5e5e5"
                        app:boxStrokeWidth="0.5dp"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="#A9A9A9">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textPassword"
                            android:fontFamily="@font/open_sans_semibold"
                            android:paddingLeft="20dp"
                            android:paddingTop="5dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="5dp"
                            android:textColor="#676a6c"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ln_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ln_txt"
                    android:layout_marginTop="22dp"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/retailer_btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="29dp"
                        android:layout_marginRight="29dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_semibold"
                        android:background="@drawable/button_round"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:text="Login"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        app:elevation="0dp" />

                    <Button
                        android:id="@+id/ret_btn_password"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="29dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="29dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_semibold"
                        android:background="@drawable/button_round"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:text="@string/Forgot_Password"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="14sp"

                        />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ln_registration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ln_btn"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/ret_btn_support"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
