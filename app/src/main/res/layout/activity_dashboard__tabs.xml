<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container_ret"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Retailor.ui.Dashboard.Dashboard_Tabs">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs_retailer_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="#fff"
            app:tabBackground="@drawable/custom_indicator"
            app:tabIndicatorColor="#96bb3c"
            app:tabSelectedTextColor="#96bb3c"
            app:tabTextAppearance="@style/CustomTextAppearanceTab" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager_retailer_dashboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tabs_retailer_dashboard"
            android:layout_marginTop="10dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </RelativeLayout>
</RelativeLayout>