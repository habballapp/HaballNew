<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over"
    tools:context=".Distributor.ui.shipments.main.Distributor_shipmentDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ln_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ln_login"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="40dp"
                    android:orientation="vertical"
                    android:weightSum="8">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="Shipment ID"
                        android:layout_marginTop="10dp"
                        android:textColor="#96bb3c"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/shipment_id"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:hint="555551223455"
                        android:background="@drawable/distribution_login"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="Delivery Date"
                        android:layout_marginTop="10dp"
                        android:textColor="#96bb3c"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/shipment_delivery_date"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:gravity="center_vertical"
                        android:hint="24/12/2019"
                        android:background="@drawable/distribution_login"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="Recieving Date"
                        android:layout_marginTop="10dp"
                        android:textColor="#96bb3c"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/shipment_recieving_date"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:hint="12/2/2020"
                        android:gravity="center_vertical"
                        android:background="@drawable/distribution_login"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="Quantity"
                        android:layout_marginTop="10dp"
                        android:textColor="#96bb3c"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/shipment_tv_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:gravity="center_vertical"
                        android:hint="100"
                        android:background="@drawable/distribution_login"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="Shipment Status"
                        android:layout_marginTop="10dp"
                        android:textColor="#96bb3c"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/shipment_tv_shstatus"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="Recieved"
                        android:background="@drawable/distribution_login"
                        android:textSize="15sp" />

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/ln_btn">
                    <TextView
                        android:id="@+id/footer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_alignParentBottom="true"
                        android:text="Â© Haball | All rights reserved" />
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>


</RelativeLayout>