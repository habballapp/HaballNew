<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over"
    tools:context="Shipment.ui.main.DistributorShipment_ViewShipment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ln_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ln_login"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:orientation="vertical"
                    android:weightSum="8">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="Shipment ID"
                        android:layout_marginTop="10dp"
                        android:textColor="#96bb3c"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/shipment_id"
                        android:layout_width="match_parent"
                        android:layout_height="80px"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:hint="555551223455"
                        android:background="@drawable/distribution_login"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="Delivery Date"
                        android:layout_marginTop="10dp"
                        android:textColor="#96bb3c"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/delivery_date"
                        android:layout_width="match_parent"
                        android:layout_height="80px"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:gravity="center_vertical"
                        android:hint="24/12/2019"
                        android:background="@drawable/distribution_login"
                        android:textSize="10sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="Recieving Date"
                        android:layout_marginTop="10dp"
                        android:textColor="#96bb3c"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/recieving_date"
                        android:layout_width="match_parent"
                        android:layout_height="80px"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:hint="15000"
                        android:gravity="center_vertical"
                        android:background="@drawable/distribution_login"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="Quantity"
                        android:layout_marginTop="10dp"
                        android:textColor="#96bb3c"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/tv_status"
                        android:layout_width="match_parent"
                        android:layout_height="80px"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:gravity="center_vertical"
                        android:hint="100"
                        android:background="@drawable/distribution_login"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="Shipment Status"
                        android:layout_marginTop="10dp"
                        android:textColor="#96bb3c"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_shstatus"
                        android:layout_width="match_parent"
                        android:layout_height="80px"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="Recieved"
                        android:background="@drawable/distribution_login"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginTop="10dp"
                        android:text="Distributor Comments"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textColor="#96bb3c"
                        android:textStyle="bold"
                        android:background="@drawable/side_line"
                        />

                    <TextView
                        android:id="@+id/tv_stat"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:layout_gravity="right"
                        android:text="Return Reason"
                        android:gravity="start"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:background="@drawable/distribution_login"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ln_txt"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btn_next"
                        android:layout_width="match_parent"
                        android:layout_height="80px"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_round"
                        android:gravity="center"
                        android:text="Next"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="15sp" />

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/ln_btn">
                    <TextView
                        android:id="@+id/footer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_alignParentBottom="true"
                        android:text="© Haball | All rights reserved" />
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>


</RelativeLayout>