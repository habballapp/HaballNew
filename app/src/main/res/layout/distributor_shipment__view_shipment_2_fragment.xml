<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over"
    tools:context=".Distributor.ui.shipments.main.DistributorShipment_OrderDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ln_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ln_login"
                    android:layout_marginTop="34dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="27dp"
                    android:layout_marginBottom="40dp"
                    android:orientation="vertical"
                    android:weightSum="8">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_order_id"
                        android:hint="Order ID"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColorHint="#96bb3c"
                        android:theme="@style/TextLabel"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText

                            android:id="@+id/order_id"
                            android:textColor="#676a6c"
                            android:paddingTop="5dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="5dp"
                            android:fontFamily="@font/open_sans_semibold"
                            android:layout_width="match_parent"
                            android:enabled="false"
                            android:layout_height="match_parent"
                            />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_order_company_name"
                        android:hint="Company Name"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_height="55dp"
                        android:fontFamily="@font/open_sans"
                        android:textColorHint="#96bb3c"
                        android:theme="@style/TextLabel"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">



                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/order_company_name"
                            android:textColor="#676a6c"
                            android:paddingTop="5dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="5dp"
                            android:fontFamily="@font/open_sans"
                            android:layout_width="match_parent"
                            android:enabled="false"
                            android:layout_height="match_parent"
                            />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_order_tr_mode"
                        android:hint="Transport Mode"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_height="55dp"
                        android:fontFamily="@font/open_sans"
                        android:textColorHint="#96bb3c"
                        android:theme="@style/TextLabel"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/order_tr_mode"
                            android:textColor="#676a6c"
                            android:paddingTop="5dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="5dp"
                            android:fontFamily="@font/open_sans"
                            android:layout_width="match_parent"
                            android:enabled="false"
                            android:layout_height="match_parent"
                            />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_order_payment_term"
                        android:hint="Payment Term"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_height="55dp"
                        android:fontFamily="@font/open_sans"
                        android:textColorHint="#96bb3c"
                        android:theme="@style/TextLabel"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/order_payment_term"
                            android:textColor="#676a6c"
                            android:paddingTop="5dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="5dp"
                            android:fontFamily="@font/open_sans"
                            android:layout_width="match_parent"
                            android:enabled="false"
                            android:layout_height="match_parent"
                            />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_order_tv_cdate"
                        android:hint="Created Date"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_height="55dp"
                        android:fontFamily="@font/open_sans"
                        android:textColorHint="#96bb3c"
                        android:theme="@style/TextLabel"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/order_tv_cdate"
                            android:textColor="#676a6c"
                            android:paddingTop="5dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="5dp"
                            android:fontFamily="@font/open_sans"
                            android:layout_width="match_parent"
                            android:enabled="false"
                            android:layout_height="match_parent"
                            />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_order_tv_status"
                        android:hint="Status"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_height="55dp"
                        android:fontFamily="@font/open_sans"
                        android:textColorHint="#96bb3c"
                        android:theme="@style/TextLabel"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/order_tv_status"
                            android:textColor="#676a6c"
                            android:paddingTop="5dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="5dp"
                            android:fontFamily="@font/open_sans"
                            android:layout_width="match_parent"
                            android:enabled="false"
                            android:layout_height="match_parent"
                            />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_order_tv_shaddress"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:hint="Shipment Address"
                        android:fontFamily="@font/open_sans"
                        android:textColorHint="#96bb3c"
                        android:theme="@style/TextLabel"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/order_tv_shaddress"
                        android:textColor="#676a6c"
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="5dp"
                        android:gravity="top|left"
                        android:fontFamily="@font/open_sans"
                        android:layout_width="match_parent"
                        android:enabled="false"
                        android:layout_height="match_parent"
                        />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_order_tv_billingAdd"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:hint="Billing Address"
                        android:fontFamily="@font/open_sans"
                        android:textColorHint="#96bb3c"
                        android:theme="@style/TextLabel"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/order_tv_billingAdd"
                            android:textColor="#676a6c"
                            android:paddingTop="5dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="5dp"
                            android:gravity="top|left"
                            android:fontFamily="@font/open_sans"
                            android:layout_width="match_parent"
                            android:enabled="false"
                            android:layout_height="match_parent"
                            />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


