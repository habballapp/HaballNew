<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#80FFFFFF"
    android:background="@color/colorPrimary"
    android:backgroundTintMode="src_over">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/ln_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"
                android:text="Payment"
                android:layout_weight="1"
                android:textSize="18sp"
                android:paddingTop="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ln_login"
            android:background="@drawable/horizontal_black_line"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>

        <Button
            android:id="@+id/btn_make_payment"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_background"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Make New Payment"
            android:textSize="14sp"
            android:textColor="#fff"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/ln_login"

            />
        <LinearLayout
            android:id="@+id/ln_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btn_make_payment"
            android:orientation="vertical"
            android:layout_marginTop="20dp"

            >


            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="Retailer Code"
                android:textColorHint="#96bb3c"
                android:theme="@style/TextLabel"
                app:boxStrokeColor="#e5e5e5"
                app:boxStrokeWidth="0.5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_heading"
                    android:textSize="14sp"
                    android:textColor="#676a6c"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="Payment ID"
                android:textColorHint="#96bb3c"
                android:theme="@style/TextLabel"
                app:boxStrokeColor="#e5e5e5"
                android:layout_marginTop="15dp"
                app:boxStrokeWidth="0.5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_paymentid"
                    android:textSize="14sp"
                    android:textColor="#676a6c"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="Created Date"
                android:textColorHint="#96bb3c"
                android:theme="@style/TextLabel"
                app:boxStrokeColor="#e5e5e5"
                android:layout_marginTop="15dp"
                app:boxStrokeWidth="0.5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_created_date"
                    android:textSize="14sp"
                    android:textColor="#676a6c"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="Transaction Date"
                android:textColorHint="#96bb3c"
                android:theme="@style/TextLabel"
                app:boxStrokeColor="#e5e5e5"
                app:boxStrokeWidth="0.5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_transaction_date"
                    android:textSize="14sp"
                    android:textColor="#676a6c"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="Bank"
                android:textColorHint="#96bb3c"
                android:theme="@style/TextLabel"
                app:boxStrokeColor="#e5e5e5"
                app:boxStrokeWidth="0.5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_bname"
                    android:textSize="14sp"
                    android:textColor="#676a6c"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="Authorization ID"
                android:textColorHint="#96bb3c"
                android:theme="@style/TextLabel"
                app:boxStrokeColor="#e5e5e5"
                app:boxStrokeWidth="0.5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_authorization"
                    android:textSize="14sp"
                    android:textColor="#676a6c"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="Settlement ID"
                android:textColorHint="#96bb3c"
                android:theme="@style/TextLabel"
                app:boxStrokeColor="#e5e5e5"
                app:boxStrokeWidth="0.5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_settlement"
                    android:textSize="14sp"
                    android:textColor="#676a6c"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="Amount"
                android:textColorHint="#96bb3c"
                android:theme="@style/TextLabel"
                app:boxStrokeColor="#e5e5e5"
                app:boxStrokeWidth="0.5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_amount"
                    android:textSize="14sp"
                    android:textColor="#676a6c"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="Status"
                android:textColorHint="#96bb3c"
                android:theme="@style/TextLabel"
                app:boxStrokeColor="#e5e5e5"
                app:boxStrokeWidth="0.5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_status"
                    android:textSize="14sp"
                    android:textColor="#676a6c"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="Transaction Charges"
                android:textColorHint="#96bb3c"
                android:theme="@style/TextLabel"
                app:boxStrokeColor="#e5e5e5"
                app:boxStrokeWidth="0.5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_transaction_charges"
                    android:textSize="14sp"
                    android:textColor="#676a6c"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ln_txt"
            android:layout_marginTop="20dp"
            android:weightSum="2"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/btn_vreciept"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/button_background"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="View Receipt"
                android:textSize="14sp"
                android:textColor="#fff"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:layout_weight="1"
                android:textAllCaps="false"
                />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/button_background"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="Back"
                android:textSize="14sp"
                android:textColor="#fff"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:layout_marginBottom="20dp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ln_btn"
            android:layout_marginBottom="10dp"
            android:text="© Haball | All rights reserved"
            android:gravity="center"
            />

    </RelativeLayout>

</ScrollView>