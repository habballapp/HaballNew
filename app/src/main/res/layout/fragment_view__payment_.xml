<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/ln_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="27dp"
            android:orientation="horizontal"
            android:background="@drawable/underline"
            android:weightSum="5.3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/open_sans"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:text="Payment"
                android:textColor="@color/textcolor"
                android:textSize="17sp" />
            <TextView
                android:id="@+id/btn_make_payment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.3"
                android:fontFamily="@font/open_sans"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:maxLines="1"
                android:text="Create Payment"
                android:drawableLeft="@drawable/ic_baseline_add_24"
                android:textColor="@color/textcolor"
                android:textSize="13.6sp" />

        </LinearLayout>




<!--        <Button-->
<!--            android:id="@+id/btn_make_payment"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="45dp"-->
<!--            android:layout_below="@+id/ln_login"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:layout_weight="1"-->
<!--            android:layout_marginStart="27dp"-->
<!--            android:layout_marginEnd="27dp"-->
<!--            android:background="@drawable/button_background"-->
<!--            android:gravity="center"-->
<!--            android:stateListAnimator="@null"-->
<!--            android:text="Make New Payment"-->
<!--            android:textAllCaps="false"-->
<!--            android:textColor="#fff"-->
<!--            android:textSize="14sp"-->

<!--            />-->

        <LinearLayout
            android:id="@+id/ln_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="27dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="27dp"
            android:layout_below="@+id/ln_login"
            android:orientation="vertical"

            >


            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:fontFamily="@font/open_sans"
                android:hint="Retailer Code"
                android:textColorHint="#96bb3c"
                android:theme="@style/TextLabel"
               >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_heading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:enabled="false"
                    android:fontFamily="@font/open_sans"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                     />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/open_sans"
                android:hint="Payment ID"
                android:textColorHint="#96bb3c"
                android:theme="@style/TextLabel"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_paymentid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/open_sans_semibold"
                    android:enabled="false"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/open_sans"
                android:hint="Created Date"
                android:textColorHint="#96bb3c"
                android:theme="@style/TextLabel"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_created_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:enabled="false"
                    android:fontFamily="@font/open_sans"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                     />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/open_sans"
                android:hint="Transaction Date"
                android:textColorHint="#96bb3c"
                android:theme="@style/TextLabel"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_transaction_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:enabled="false"
                    android:fontFamily="@font/open_sans"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                     />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/open_sans"
                android:hint="Bank"
                android:textColorHint="#96bb3c"
                android:theme="@style/TextLabel"
               >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_bname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:enabled="false"
                    android:fontFamily="@font/open_sans"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/open_sans"
                android:hint="Authorization ID"
                android:textColorHint="#96bb3c"
                android:theme="@style/TextLabel"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_authorization"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:enabled="false"
                    android:fontFamily="@font/open_sans_semibold"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                     />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/open_sans"
                android:hint="Settlement ID"
                android:textColorHint="#96bb3c"
                android:theme="@style/TextLabel"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_settlement"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:enabled="false"
                    android:fontFamily="@font/open_sans"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/open_sans"
                android:hint="Amount"
                android:textColorHint="#96bb3c"
                android:theme="@style/TextLabel"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_amount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:enabled="false"
                    android:fontFamily="@font/open_sans"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                     />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/open_sans"
                android:hint="Status"
                android:textColorHint="#96bb3c"
                android:theme="@style/TextLabel"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:enabled="false"
                    android:fontFamily="@font/open_sans"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                     />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/open_sans"
                android:hint="Transaction Charges"
                android:textColorHint="#96bb3c"
                android:theme="@style/TextLabel"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_transaction_charges"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:enabled="false"
                    android:fontFamily="@font/open_sans"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ln_txt"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_vreciept"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:text="View Receipt"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="27dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:text="Back"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="14sp" />
        </LinearLayout>

     

    </RelativeLayout>

</ScrollView>