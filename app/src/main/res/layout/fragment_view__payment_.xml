<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#80FFFFFF"
    android:background="@color/colorPrimary"
    android:backgroundTintMode="src_over"
    tools:context=".Registration.Register_Activity_2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/ln_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="10dp"
                android:text="Payment"
                android:layout_weight="1"
                android:textSize="18sp"
                android:paddingTop="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ln_login"
            android:background="@drawable/horizontal_black_line"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>

        <Button
            android:id="@+id/btn_make_payment"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_background"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="Make New Payment"
            android:textSize="14sp"
            android:textColor="#fff"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/ln_login"

            />
        <LinearLayout
            android:id="@+id/ln_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btn_make_payment"
            android:orientation="vertical"
            android:layout_marginTop="20dp"

            >

            <TextView
                android:id="@+id/txt_heading"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Ghullam Rabbani And Sons"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:background="@drawable/edit_text_squared"
                android:inputType="textCapSentences"
                />
            <TextView
                android:id="@+id/txt_paymentid"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_squared"
                android:inputType="textCapSentences"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Payment ID: 321885888699685"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/txt_created_date"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_squared"
                android:inputType="number"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Created Date:27/12/2019"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/txt_transaction_date"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_squared"
                android:inputType="number"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Transaction Date:27/12/2019"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/txt_bname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_squared"
                android:inputType="text"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:maxLength="12"
                android:hint="Bnak:Meezan Bank Ltd"
                />
            <TextView
                android:id="@+id/txt_authorization"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_squared"
                android:inputType="text"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:maxLength="12"
                android:hint="Authorization ID: 45868695949393030404"
                />
            <TextView
                android:id="@+id/txt_settlement"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_squared"
                android:inputType="text"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:maxLength="12"
                android:hint="Settlement ID:6797905040403030"
                />
            <TextView
                android:id="@+id/txt_amount"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_squared"
                android:inputType="text"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:maxLength="12"
                android:hint="Amount PKR:6797905040403030"
                />
            <TextView
                android:id="@+id/txt_status"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_squared"
                android:inputType="text"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:maxLength="12"
                android:hint="Status: Paid"
                />

            <TextView
                android:id="@+id/txt_transaction_charges"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_squared"
                android:inputType="text"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:maxLength="12"
                android:hint="Transaction Charges: PKR 350.00"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ln_txt"
            android:layout_marginTop="30dp"
            android:weightSum="2"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/btn_vreciept"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/button_background"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="View Receipt"
                android:textSize="14sp"
                android:textColor="#fff"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:layout_weight="1"
                android:textAllCaps="false"
                />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/button_background"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="Back"
                android:textSize="14sp"
                android:textColor="#fff"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:layout_marginBottom="60dp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ln_btn"
            android:layout_marginBottom="10dp"
            android:text="Â© Haball | All rights reserved"
            android:gravity="center"
            />

    </RelativeLayout>

</ScrollView>