<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="Distributor.ui.retailer.Retailor_Management.Retailer_Dashboard">
    <TextView
        android:id="@+id/tv_retailer_dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retailor Dashboard"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textColor="#96bb3c"
        android:layout_marginLeft="30dp"
        android:background="@drawable/half_underline"/>

    <RelativeLayout
        android:id="@+id/line_"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/tv_retailer_dashboard"
        android:layout_toRightOf="@+id/tv_retailer_dashboard"
        android:background="@drawable/line"
        android:layout_marginTop="-2dp"/>

    <RelativeLayout
        android:id="@+id/spinner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_text_squared"
        android:layout_below="@+id/line_">
        <Spinner
            android:id="@+id/spinner_conso"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line_bottom"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/spinner_container"
        android:background="@drawable/line_seperator"
        android:layout_marginTop="15dp"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/line_bottom"
       android:orientation="vertical"
       android:layout_marginBottom="40dp"
       android:weightSum="1"
       >
       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/rv_retailer_dashboard"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_marginRight="30dp"
           android:layout_weight="2.75"
           android:layout_marginLeft="30dp"/>



   </LinearLayout>


</RelativeLayout>
