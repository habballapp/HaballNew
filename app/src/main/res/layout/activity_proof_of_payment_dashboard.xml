<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Payment.ProofOfPaymentDashboard">
    <TextView
        android:id="@+id/tv_proof_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proof Of Payment"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textColor="#96bb3c"
        android:layout_marginLeft="30dp"
        android:background="@drawable/half_underline"/>

    <RelativeLayout
        android:id="@+id/line_"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/tv_proof_payment"
        android:layout_toRightOf="@+id/tv_proof_payment"
        android:background="@drawable/line"
        android:layout_marginTop="-2dp"/>

    <Button
        android:id="@+id/btn_create_proof_of_payment"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/button_background"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Create Proof of Payment"
        android:textAllCaps="false"
        android:stateListAnimator="@null"
        android:textColor="@android:color/white"
        android:layout_below="@+id/tv_proof_payment"
        android:layout_marginTop="15dp"/>


    <RelativeLayout
        android:id="@+id/spinner_container_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_create_proof_of_payment">

        <RelativeLayout
            android:id="@+id/spinner_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edit_text_squared">

            <Spinner
                android:id="@+id/spinner_conso"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/spinner_container1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_container"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="15dp"
            android:visibility="visible"
            android:background="@drawable/edit_text_squared">

            <Spinner
                android:id="@+id/conso_spinner2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/search_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_container"
            android:layout_marginLeft="30dp"
            android:visibility="visible"
            android:layout_marginRight="30dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search by Item"
                android:textColorHint="#676a6c">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/conso_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@drawable/ic_search_black_24dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#676a6c"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

        <!--        date filter layout-->

        <LinearLayout
            android:id="@+id/date_filter_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_container"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:visibility="visible"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/date_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/line_bottom"
                android:layout_weight="1.125"
                android:weightSum="2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/first_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="22/12/2020"/>
                <ImageButton
                    android:id="@+id/first_date_btn"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1.75"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_date_range_black_24dp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.75"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <RelativeLayout
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#676A6C"

                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/date1_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:weightSum="2"
                android:background="@drawable/line_bottom"
                android:layout_weight="1.125">
                <TextView
                    android:id="@+id/second_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="22/12/2020"
                    android:layout_weight="0.25"/>
                <ImageButton
                    android:id="@+id/second_date_btn"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1.75"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_date_range_black_24dp"/>
            </LinearLayout>

        </LinearLayout>
        <!--        date filter layout-->

        <!--        amount filter layout-->

        <LinearLayout
            android:id="@+id/amount_filter_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_container"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/amount_filter1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:weightSum="2"
                android:paddingBottom="10dp"
                android:background="@drawable/line_bottom"
                android:layout_weight="1.125"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:textColor="#676A6C"
                    android:text="PKR "/>
                <EditText
                    android:id="@+id/et_amount1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:textColor="#676A6C"
                    android:textColorHint="#676A6C"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.75"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <RelativeLayout
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#676A6C"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/amount_filter2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:weightSum="2"
                android:background="@drawable/line_bottom"
                android:layout_weight="1.125">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:textColor="#676A6C"
                    android:text="PKR "/>
                <EditText
                    android:id="@+id/et_amount2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:textColor="#676A6C"
                    android:textColorHint="#676A6C"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/line_bottom"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/spinner_container_main"
        android:background="@drawable/line_seperator"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tv_shipment_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line_bottom"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="No Data Available"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line_bottom"
        android:orientation="vertical"
        android:layout_marginBottom="40dp"
        android:weightSum="3">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_proof_of_payments"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginRight="30dp"
            android:layout_weight="2.75"
            android:layout_marginLeft="30dp"/>
        <RelativeLayout
            android:layout_weight="0.25"
            android:layout_width="match_parent"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal">
            <!--            <ProgressBar-->
            <!--                android:id="@+id/load_more"-->
            <!--                android:layout_width="30dp"-->
            <!--                android:layout_height="30dp"-->
            <!--                android:layout_centerInParent="true"/>-->
            <Button
                android:id="@+id/btn_load_more"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:text="@string/load_more"/>

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="© Haball | All rights reserved"
        android:gravity="center"/>
</RelativeLayout>