<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over"
    tools:context=".Registration.Register_Activity_2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/text_ln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Welcome To Distributor Portal"
                android:textSize="20sp"
                android:textColor="#96bb3c"
                android:textStyle="bold"
                android:maxLines="1"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:text="@string/Txt_Description_Distributer"
                android:textSize="15sp"
                android:textColor="#676a6c"
                android:justificationMode="inter_word"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_below="@id/text_ln">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="10dp"
                android:text="REGISTER"
                android:layout_weight="1"
                android:textSize="18sp"
                android:paddingTop="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="#96bb3c"
                android:textStyle="bold"
                android:background="@drawable/side_line"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="15dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:text="BASIC INFORMATION"
                android:textColor="#96bb3c"
                android:textSize="10sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:background="@drawable/side_line"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ln_login"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            >

            <EditText
                android:id="@+id/txt_firstname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingTop="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:background="@drawable/edit_text_squared"
                android:hint="First Name *"
                android:inputType="textCapSentences"
                />
            <EditText
                android:id="@+id/txt_lastname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_squared"
                android:inputType="textCapSentences"
                android:paddingTop="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:hint="Last Name *"
                />

            <EditText
                android:id="@+id/txt_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_squared"
                android:hint="Email Address *"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/txt_cnic"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_squared"
                android:inputType="number"
                android:paddingTop="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:maxLength="15"
                android:hint="CNIC Number *"
                />
            <EditText
                android:id="@+id/txt_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_squared"
                android:inputType="number"
                android:paddingTop="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:maxLength="12"
                android:hint="Mobile Number *"
                />
            <EditText
                android:id="@+id/txt_phone_number"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_squared"
                android:inputType="number"
                android:paddingTop="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:maxLength="12"
                android:hint="Phone Number *"
                />
            <EditText
                android:id="@+id/txt_ntn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_squared"
                android:inputType="number"
                android:paddingTop="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:maxLength="9"
                android:hint="NTN *"
                />
            <EditText
                android:id="@+id/txt_conpany_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_squared"
                android:inputType="textCapSentences"
                android:paddingTop="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:hint="Company Name *"
                />
            <EditText
                android:id="@+id/txt_website"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_squared"
                android:inputType="text"
                android:paddingTop="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:hint="Website *"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ln_txt"
            android:layout_marginTop="30dp"
            android:weightSum="2"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/button_background"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="Next"
                android:textSize="15sp"
                android:textColor="#fff"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:layout_marginBottom="60dp"

                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ln_btn"
            android:layout_marginBottom="10dp"
            android:text="Â© Haball | All rights reserved"
            android:gravity="center"
            />

    </RelativeLayout>

</ScrollView>