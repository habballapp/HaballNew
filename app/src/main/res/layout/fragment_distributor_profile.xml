<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/ln_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/proof_of_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/underline"
                android:orientation="vertical">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Profile"
                    android:paddingBottom="10dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="100dp"
                    android:textSize="18sp"
                    android:textColor="#96bb3c"
                    android:background="@drawable/half_underline"

                    />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ln_login"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="40dp"
            android:orientation="vertical"
            android:weightSum="8">

<!--            <com.google.android.material.textfield.TextInputLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="60dp"-->
<!--                android:layout_marginLeft="40dp"-->
<!--                android:layout_marginRight="40dp"-->
<!--                android:hint="Username"-->
<!--                android:textColorHint="#96bb3c"-->
<!--                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">-->

<!--                <com.google.android.material.textfield.TextInputEditText-->
<!--                    android:id="@+id/et_test"-->
<!--                    android:textSize="15sp"-->
<!--                    android:textColor="#676a6c"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"/>-->

<!--            </com.google.android.material.textfield.TextInputLayout>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:text="DISTRIBUTOR  CODE"
                android:layout_marginTop="10dp"
                android:textColor="#96bb3c"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edt_dist_code"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:textColor="#676a6c"
                android:editable="false"
                android:hint="555551223455"
                android:background="@drawable/distribution_login"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:text="FIRST NAME *"
                android:layout_marginTop="10dp"
                android:textColor="#96bb3c"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edt_firstname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:drawablePadding="10dp"
                android:textColor="#676a6c"
                android:gravity="center_vertical"
                android:hint="Abdul"
                android:drawableRight="@drawable/editprofile"
                android:background="@drawable/distribution_login"
                android:textSize="15sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:text="LAST NAME *"
                android:layout_marginTop="10dp"
                android:textColor="#96bb3c"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edt_lastname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:drawablePadding="10dp"
                android:hint="Qadir"
                android:textColor="#676a6c"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/editprofile"
                android:background="@drawable/distribution_login"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:text="EMAIL ADDRESS *"
                android:layout_marginTop="10dp"
                android:textColor="#96bb3c"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="abdul.qadir@gmail.com"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:textColor="#676a6c"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/editprofile"
                android:background="@drawable/distribution_login"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:text="CNIC NUMBER"
                android:layout_marginTop="10dp"
                android:textColor="#96bb3c"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_cnic"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:text="12345678"
                android:textColor="#676a6c"
                android:background="@drawable/distribution_login"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:text="MOBILE NO *"
                android:layout_marginTop="10dp"
                android:textColor="#96bb3c"
                android:textSize="12sp" />
            <EditText
                android:id="@+id/edt_dist_mobile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/editprofile"
                android:gravity="center_vertical"
                android:text="03452389760"
                android:textColor="#676a6c"
                android:background="@drawable/distribution_login"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:text="NTN"
                android:layout_marginTop="10dp"
                android:textColor="#96bb3c"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_NTN"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:text="23132"
                android:textColor="#676a6c"
                android:background="@drawable/distribution_login"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:text="COMPANY NAME"
                android:layout_marginTop="10dp"
                android:textColor="#96bb3c"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_companyname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:textColor="#676a6c"
                android:gravity="center_vertical"
                android:text="MATZ Solutions"
                android:background="@drawable/distribution_login"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:text="CREATED DATE"
                android:layout_marginTop="10dp"
                android:textColor="#96bb3c"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_created_date"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:textColor="#676a6c"
                android:text="18/01/2020"
                android:background="@drawable/distribution_login"
                android:textSize="15sp" />


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/ln_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ln_txt"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/btn_changepwd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/button_background"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="Change Password"
                android:textSize="15sp"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_weight="1"
                android:textAllCaps="false"

                />
            <Button
                android:id="@+id/distri_btn_save"
                android:layout_width="match_parent"
                android:layout_below="@id/btn_changepwd"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="15dp"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:background="@drawable/button_round"
                android:text="Save"
                android:textColor="#fff"
                />
        </RelativeLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ln_btn"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:text="© Haball | All rights reserved"
            android:gravity="center"
            />

    </RelativeLayout>

</ScrollView>