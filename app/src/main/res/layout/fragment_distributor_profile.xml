<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ln_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/underline"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textColor="#96bb3c"
                android:background="@drawable/half_underline"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ln_login"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="40dp"
            android:orientation="vertical"
            android:weightSum="8">

<!--                        <com.google.android.material.textfield.TextInputLayout-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="60dp"-->
<!--                            android:layout_marginLeft="40dp"-->
<!--                            android:layout_marginRight="40dp"-->
<!--                            android:hint="Username"-->
<!--                            android:textColorHint="#96bb3c"-->
<!--                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">-->

<!--                            <com.google.android.material.textfield.TextInputEditText-->
<!--                                android:id="@+id/et_test"-->
<!--                                android:textSize="15sp"-->
<!--                                android:textColor="#676a6c"-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="match_parent"/>-->

<!--                        </com.google.android.material.textfield.TextInputLayout>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:text="DISTRIBUTOR  CODE"
                android:textColor="#96bb3c"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edt_dist_code"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/distribution_login"
                android:editable="false"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textColor="#676a6c"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:text="FIRST NAME *"
                android:textColor="#96bb3c"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edt_firstname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/distribution_login"
                android:drawableRight="@drawable/editprofile"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:textColor="#676a6c"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:text="LAST NAME *"
                android:textColor="#96bb3c"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edt_lastname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/distribution_login"
                android:drawableRight="@drawable/editprofile"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:textColor="#676a6c"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:text="EMAIL ADDRESS *"
                android:textColor="#96bb3c"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/distribution_login"
                android:drawableRight="@drawable/editprofile"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:textColor="#676a6c"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:text="CNIC NUMBER"
                android:textColor="#96bb3c"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_cnic"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/distribution_login"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textColor="#676a6c"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:text="MOBILE NO *"
                android:textColor="#96bb3c"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edt_dist_mobile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/distribution_login"
                android:drawableRight="@drawable/editprofile"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:textColor="#676a6c"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:text="NTN"
                android:textColor="#96bb3c"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_NTN"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/distribution_login"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textColor="#676a6c"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:text="COMPANY NAME"
                android:textColor="#96bb3c"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_companyname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/distribution_login"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textColor="#676a6c"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:text="CREATED DATE"
                android:textColor="#96bb3c"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_created_date"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/distribution_login"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textColor="#676a6c"
                android:textSize="15sp" />


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/ln_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ln_txt"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_changepwd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:text="Change Password"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="15sp"

                />

            <Button
                android:id="@+id/distri_btn_save"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/btn_changepwd"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="30dp"
                android:background="@drawable/button_round"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="15sp" />
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ln_btn"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:text="© Haball | All rights reserved" />

    </RelativeLayout>

</ScrollView>