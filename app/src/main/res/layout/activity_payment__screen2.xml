<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payment.Payment_Screen2">

    <LinearLayout
        android:id="@+id/ln_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/underline"
        android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Payment"
            android:paddingBottom="10dp"
            android:layout_weight="1"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="100dp"
            android:textSize="18sp"
            android:textColor="#96bb3c"
            android:background="@drawable/half_underline"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/ln_login"
        android:weightSum="3"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/relative_Preffered_Contact"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/relative_criticality"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edit_round"
            android:padding="10dp">

            <Spinner
                android:id="@+id/Preffered_Contact"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <EditText
            android:id="@+id/txt_amount"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="10dp"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/edit_round"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:hint="Amount"
            />

        <Button
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/TxT_Update"
            android:textSize="15sp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_weight="1"
            android:textAllCaps="false"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ln_txt"
        android:layout_marginTop="10dp"
        android:weightSum="3"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/payment_id"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="10dp"
            android:textSize="15sp"
            android:layout_marginStart="20dp"
            android:background="@drawable/edit_round"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:hint="Payment ID:324569697708"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:text="@string/Txt_Payment"
            android:layout_below="@id/ln_btn"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp" />

        <RelativeLayout
            android:id="@+id/banking_channel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_round"
            android:layout_marginStart="30dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="30dp"
            android:padding="15dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Banking Channel"
                android:gravity="center"
                android:drawableStart="@drawable/ic_account_balance_black_24dp"
                android:textSize="22dp"/>
        </RelativeLayout>
    </LinearLayout>



</RelativeLayout>