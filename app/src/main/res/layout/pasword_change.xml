<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        >

        <ImageButton
            android:id="@+id/image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/txt_header1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Change Password"
            android:textSize="18sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="#96bb3c"
            android:background="@drawable/border_set"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:id="@+id/txt_change1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pr5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/txt_header1"
            />

        <TextView
            android:id="@+id/txt_change2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pr6"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/txt_change1"
            />

        <TextView
            android:id="@+id/txt_change3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pr7"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/txt_change2"
            />

        <EditText
            android:id="@+id/txt_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/txt_change3"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:background="@drawable/distribution_login"
            android:hint="Old Password"
            android:inputType="textPassword"
            />

        <EditText
            android:id="@+id/txt_newpassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/txt_password"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:background="@drawable/distribution_login"
            android:hint="New Password"
            android:inputType="textPassword"
            />

        <EditText
            android:id="@+id/txt_cfmpassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/txt_newpassword"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:background="@drawable/distribution_login"
            android:hint="New Password"
            android:inputType="textPassword"
            />


        <Button
            android:id="@+id/update_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_round"
            android:layout_marginTop="20dp"
            android:text="Update Password"
            android:textSize="14sp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_below="@id/txt_cfmpassword"
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"
            />

    </RelativeLayout>
</LinearLayout>