<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="27dp"
        android:padding="10dp">

       <LinearLayout
           android:id="@+id/txt_header1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
          >
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:fontFamily="@font/open_sans"
               android:text="Enter Old Password"
               android:textColor="@color/textcolor"
               android:textSize="16sp"
               />


       </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_header1"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Old Password"
                android:fontFamily="@font/open_sans"
                android:theme="@style/TextLabel"
                app:boxBackgroundColor="#fff"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#A9A9A9">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/open_sans"
                    android:inputType="textPassword"
                    android:paddingLeft="20dp"
                    android:paddingEnd="60dp"
                    android:paddingRight="60dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#676a6c"
                     />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/txt_header"
            android:layout_width="match_parent"
            android:layout_below="@+id/ll_fields"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/open_sans"
                android:text="Enter New Password"
                android:textColor="@color/textcolor"
                android:textSize="16sp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_fields1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_header">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_password1"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:hint="New Password"
                android:theme="@style/TextLabel"
                android:fontFamily="@font/open_sans"
                app:boxBackgroundColor="#fff"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#A9A9A9">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_newpassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/open_sans"
                    android:inputType="textPassword"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="60dp"
                    android:paddingRight="60dp"
                    android:paddingBottom="5dp"
                    android:textColor="#676a6c"
                    android:drawableRight="@drawable/ic_edit_black_24dp" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

<!--        <LinearLayout-->
<!--            android:id="@+id/info_red_eye"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="55dp"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:layout_marginLeft="260dp"-->
<!--            android:layout_below="@+id/txt_header"-->

<!--           >-->
