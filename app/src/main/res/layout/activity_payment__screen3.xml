<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Payment.Payment_Make_New">

    <LinearLayout
        android:id="@+id/ln_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/underline"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Payment"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:layout_weight="1"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="100dp"
            android:textSize="20sp"
            android:textColor="#96bb3c"
            android:background="@drawable/half_underline"

            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ln_login"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ln_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:weightSum="5"
                android:orientation="vertical"
                >

                <Button
                    android:id="@+id/btn_newpayment"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/button_round"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    android:text="Make New Payment"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    />
                <RelativeLayout
                    android:id="@+id/relative_Preffered_Contact"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_below="@+id/relative_criticality"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/edit_round"
                    android:padding="10dp">

                    <Spinner
                        android:id="@+id/spinner_companyName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:dropDownWidth="match_parent"/>
                </RelativeLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_txt_amount"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    android:hint="Amount"
                    android:theme="@style/TextLabel"
                    android:layout_weight="1"
                    app:boxStrokeColor="#e5e5e5"
                    app:boxStrokeWidth="1.75dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_amount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="5dp"
                        android:textColor="#676a6c"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_update"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/button_round"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/TxT_Update"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    />

                <Button
                    android:id="@+id/btn_voucher"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/button_round"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    android:text="View Voucher"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ln_txt"
                android:layout_marginTop="5dp"
                android:weightSum="4"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:weightSum="4"
                    android:orientation="horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/edit_round"

                    >
                    <TextView
                        android:id="@+id/payment_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:layout_weight="2"
                        android:hint="Payment ID:"
                        android:gravity="center"
                        android:layout_marginRight="30dp"
                        android:background="@android:color/transparent"
                        />

                    <TextView
                        android:id="@+id/payment_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:hint="324569697708"
                        android:layout_marginLeft="-56dp"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:background="@android:color/transparent"
                        />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:text="@string/Txt_Payment"
                    android:layout_below="@id/ln_btn"
                    android:textSize="20sp"
                    android:layout_marginBottom="5dp"
                    />

                <RelativeLayout
                    android:id="@+id/rl_banking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_round"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:padding="15dp"
                    android:layout_marginBottom="30dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_banking_channel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Banking Channel"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_account_balance_black_24dp"
                        android:textSize="22dp"/>
                </RelativeLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:text="Â© Haball | All rights reserved"
                android:gravity="center"
                />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>