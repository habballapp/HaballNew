<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over"
    tools:context=".Registration.Registration_Actvity2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ln_shipping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:weightSum="2"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="10dp"
                    android:text="Welcome To Distributor Portal"
                    android:textColor="#96bb3c"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    android:paddingRight="10dp"
                    android:paddingLeft="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:justificationMode="inter_word"
                    android:text="@string/Txt_Description_Distributer"
                    android:textSize="15sp" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/ln_shipping">

                <LinearLayout
                    android:id="@+id/ln_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_set"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:text="REGISTER"
                        android:textColor="#96bb3c"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_set"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="ACCOUNT CREDENTIALS"
                        android:textColor="#96bb3c"
                        android:textSize="10sp" />

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/rl_fields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ln_login"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="0dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="0dp">

                    <EditText
                        android:id="@+id/Address"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/edit_text_squared"
                        android:hint="Address01 *"
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="5dp"
                        android:textSize="15sp"
                        android:gravity="top|left"/>


                    <RelativeLayout
                        android:id="@+id/relative_issuetype"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/Address"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/edit_text_squared">

                        <Spinner
                            android:id="@+id/spinner_country"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relative_criticality"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/relative_issuetype"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/edit_text_squared">

                        <Spinner
                            android:id="@+id/spinner_province"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relative_Preffered_Contact"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/relative_criticality"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/edit_text_squared">

                        <Spinner
                            android:id="@+id/spinner_city"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </RelativeLayout>


                    <EditText
                        android:id="@+id/postal_shipping"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/relative_Preffered_Contact"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/edit_text_squared"
                        android:hint="Postal Code *"
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="5dp"
                        android:maxLength="5"
                        android:textSize="15sp" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ln_billing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_fields"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_set"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:text="REGISTER"
                        android:textColor="#96bb3c"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_set"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="BILLING ADDRESS"
                        android:textColor="#96bb3c"
                        android:textSize="10sp" />

                    <CheckBox
                        android:id="@+id/check_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="10dp"
                        android:text="SAME AS SHIPPING ADDRESS"
                        android:textColor="#676a6e"
                        />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_billing_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ln_billing">
                    <RelativeLayout
                        android:id="@+id/rl_billing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/Address02"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:background="@drawable/edit_text_squared"
                            android:hint="Address02 *"
                            android:paddingTop="5dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="5dp"
                            android:textSize="15sp"
                            android:gravity="top|left" />

                        <RelativeLayout
                            android:id="@+id/select_country"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/Address02"
                            android:layout_marginTop="30dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:background="@drawable/edit_text_squared">

                            <Spinner
                                android:id="@+id/spinner_country2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/select_province"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/select_country"
                            android:layout_marginTop="30dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:background="@drawable/edit_text_squared">

                            <Spinner
                                android:id="@+id/spinner_province2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/select_city"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/select_province"
                            android:layout_marginTop="30dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:background="@drawable/edit_text_squared">

                            <Spinner
                                android:id="@+id/spinner_city2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </RelativeLayout>

                        <EditText
                            android:id="@+id/postal_billing"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/select_city"
                            android:layout_marginTop="30dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:background="@drawable/edit_text_squared"
                            android:hint="Postal Code *"
                            android:paddingTop="5dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="5dp"
                            android:maxLength="5"
                            android:textSize="15sp" />

                    </RelativeLayout>
                </RelativeLayout>
                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/rl_billing_main"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_round"
                    android:gravity="center"
                    android:text="Register"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:layout_marginBottom="40dp"/>

            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:text="© Haball | All rights reserved" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>